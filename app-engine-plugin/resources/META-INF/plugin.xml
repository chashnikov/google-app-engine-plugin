<idea-plugin>
  <name>Google App Engine Integration</name>
  <id>com.intellij.appengine</id>
  <description>
    <![CDATA[
    Provides support for developing Google App Engine applications. The following features are available:
    <ul>
     <li> option on "Technologies" page of the module wizard to quickly create an AppEngine project
     <li> inspection to report forbidden code in App Engine application
     <li> run configuration for Google App Engine Dev server
     <li> option to run JDO Enhancer on make (in Google App Engine Facet settings)
     <li> action for uploading an application to Google (Tools | Upload App Engine Application)
    </ul>
   ]]>
  </description>
  <version>1.1.0.7</version>
  <idea-version since-build="9000"/>
  <depends>com.intellij.javaee</depends>
  <vendor logo="/general/ijLogo.png">JetBrains</vendor>
  <category>Web/JavaEE Technologies</category>
  <change-notes>
      <![CDATA[
        <ul>
          <li> option for Dev Server parameters in Run Configuration
        </ul>
      ]]>
  </change-notes>

  <extensions defaultExtensionNs="com.intellij">
    <javaee.appServerIntegration implementation="com.intellij.appengine.server.integration.AppEngineServerIntegration"/>
    <configurationType implementation="com.intellij.appengine.server.run.AppEngineServerConfigurationType"/>

    <applicationService serviceInterface="com.intellij.appengine.sdk.AppEngineSdkManager"
                        serviceImplementation="com.intellij.appengine.sdk.impl.AppEngineSdkManagerImpl"/>

    <inspectionToolProvider implementation="com.intellij.appengine.inspections.AppEngineInspectionsProvider"/>
    <frameworkSupport implementation="com.intellij.appengine.facet.AppEngineSupportProvider"/>
    <fileTemplateGroup implementation="com.intellij.appengine.facet.AppEngineTemplateGroupDescriptorFactory"/>
    <facetType implementation="com.intellij.appengine.facet.AppEngineFacetType"/>
    <compiler implementation="com.intellij.appengine.enhancement.EnhancerCompiler"/>
  </extensions>

  <actions>
    <action class="com.intellij.appengine.actions.UploadApplicationAction" id="AppEngine.UploadApplication"
            text="Upload App Engine Application" icon="/icons/appEngine.png">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>